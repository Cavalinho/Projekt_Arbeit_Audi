          <% end %>
        </li>
        <li class="nav-item <%= set_menu('shopfloor') %>">
          <a class="nav-link" href="shopfloor">
            <i class="fa fa-fw fa-area-chart"></i>
            <span class="nav-link-text">Shopfloor</span>
